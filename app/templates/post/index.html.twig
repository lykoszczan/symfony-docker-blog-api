{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <style>
        .wrapper {
            margin: 1em auto;
            width: 95%;
        }
    </style>

    <div class="wrapper">
        <h1>Blog</h1>
        <a href="/add">Add new post</a>
        <table class="table table-striped table-hover table-bordered">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">Image</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.content }}</td>
                    <td><img alt="blog_image" src="/uploads/{{ post.imagePath }}"/></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}